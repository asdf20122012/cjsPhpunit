<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="Tests/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         addUncoveredFilesFromWhitelist="true"
         processUncoveredFilesFromWhitelist="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">
    <testsuites>
        <testsuite name="User Application Test Suite">
            <directory>./Tests</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="APP_TEST_ENV" value="true"/>
        <env name="NO_RESET_DB" value="true"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TEST_INVOKE_LOG_DIR" value="/tmp"/>
        <env name="TEST_DEBUG" value="false" />
        <env name="TEST_SCHEMAS_DIR" value="Tests/schemas" />
    </php>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">app/User/Controllers</directory>
        </whitelist>
    </filter>
</phpunit>


